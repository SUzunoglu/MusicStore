@model CategoryListViewModel

<div class="list-group">
    @foreach (var category in Model.Categories)
    {
        <a asp-controller="Shop"
           asp-action="List"
           asp-route-category="@category.Name"
           class="list-group-item list-group-item-action btn btn-outline-secondary @(Model.SelectedCategory==category.Name?"active":"")">
            @category.Name
        </a>
    }
</div>